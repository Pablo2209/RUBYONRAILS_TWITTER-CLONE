<div class="card" style="width: 40rem;">
  <div class="card-body">
    <div class="column ">
      <article class="media box">
        <figure class="media-left">
          <p class="image is-128x128">
            <img class="izquierda" src="https://bulma.io/images/placeholders/128x128.png">
          </p>
        </figure>
        <div class="media-content">
          <div class="content">
            <p>
              <strong>John Smith</strong> <small>@johnsmith</small> <small>31m</small>
              <br>
              <%= render 'tweets/form'%>
            </p>
          </div>
          <nav class="level is-mobile">
            <div class="level-left">
              <a class="level-item">
                <span class="icon is-small"><i class="far fa-thumbs-up"></i></span>
              </a>
              <a class="level-item">
                <span class="icon is-small"><i class="fas fa-retweet"></i></span>
              </a>
              <a class="level-item">
                <span class="icon is-small"><i class="fas fa-heart"></i></span>
              </a>
            </div>
          </nav>
        </div>
      </article>
    </div> 
  </div>
</div>

<% @tweets.each do |tweet| %>
  <div class="box">
    <article class="media">
        <div class="media-left">
          <figure class="image is-128x128">
            <img class="izquierda" src="https://bulma.io/images/placeholders/128x128.png">
          </figure>
        </div>
        <div class="media-content">
          <strong> Pablo Chavez</strong>
          <br>
          <small>@PCD</small>
          <br>
          <p><%= tweet.tweet %></p>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to tweet, class: "level-item" do %>
              <span class="icon">
                <i class="fa fa-link" aria-hidden="true"></i>
              </span>
            <% end %>
            <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
              <span class="icon">
                <i class="fas fa-pencil-alt" aria-hidden="true"></i>
              </span>
            <% end %>
            <%= link_to tweet, method: :delete, data: { confirm: 'Are you sure?'} do %>
              <span class="icon">
                <i class="fas fa-trash" aria-hidden="true" ></i>
              </span>
            <% end %>
          </div>
        </nav>
    </article>
  </div>
  <% end %>
